<!DOCTYPE html>
<html>
<head>
	<title>
		<%=title %>
	</title>
</head>
<body>
	<% for(var i in messages) { %>
		<div class="flash">
			<%= messages[i] %>
		</div>
	<% } %>

	<form action="/login" method="post">
		<div>
			<label>Username:</label>
			<input type="text" name="username" />
		</div>
	
		<div>
			<label>Password:</label>
			<input type="password" name="password" />
		</div>
	
		<div>
			<input type="submit" value="Login" />
		</div>
	</form>
</body>
</html>